{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
      "exclude": [
          "node_modules",
          "src/types/generated/**"
      ]
    },
    "rules": {
      "interface-name": [
        true,
        "never-prefix"
      ],
      "quotemark": [true, "single"],
      "curly": false,
      "object-literal-sort-keys": false
    },
    "rulesDirectory": []
}